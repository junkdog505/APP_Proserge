<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/Violet_200"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FDFAF8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_worker" />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewDNI"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_light_background"
                            android:layout_weight="1"
                            android:text="DNI:"/>

                        <TextView
                            android:id="@+id/textViewDniTrabajador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cardview_light_background"
                            android:layout_weight="1"
                            android:text="00000000"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewNombresTrabajador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_light_background"
                        android:layout_weight="1"
                        android:text="Nombre1 Nombre2"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/textViewApellidosTrabajador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_light_background"
                        android:layout_weight="1"
                        android:text="Apellido1 Apellido2"
                        android:gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewCargo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_light_background"
                            android:text="Cargo: "
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/textViewCargoTrabajador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cardview_light_background"
                            android:layout_weight="1"
                            android:text="Detalles del cargo"
                            android:gravity="center_vertical"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewContrato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/cardview_light_background"
                            android:text="Contrato: "
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/textViewContratoTrabajador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cardview_light_background"
                            android:layout_weight="1"
                            android:text="TipoContrato"
                            android:gravity="center_vertical"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btnEditarElementoTrabajador"
                    android:text="Editar"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Violet_100"
                    android:drawableRight="@drawable/ic_edit"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnEliminarElementoTrabajador"
                    android:text="Eliminar"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Red_300"
                    android:drawableRight="@drawable/ic_delete"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>